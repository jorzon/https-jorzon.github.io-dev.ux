			.section9__align
				.section9__header
					.item__list
						.item.skeletor
							.item__info
								h2 Wireframes de alta fidelidad
								p Después de varias rondas de pruebas de usuarios en los wireframes de baja fidelidad, creé los wireframes de alta fidelidad de la web.

									
				.section9__main
					.item__list#diseno

						.item.skeletor
							.item__image
								img(src=path+'assets/la-lena/web-la-lena-inicio.png')

							.item__info
								h2 Inicio

						.item.skeletor
							.item__image
								img(src=path+'assets/la-lena/web-la-lena-detalle.png')

							.item__info
								h2 Detalle categoria

						.item.skeletor
